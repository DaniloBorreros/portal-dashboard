// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Student {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  firstName     String
  middleInit    String?
  lastName      String
  Suffix        String?
  birthDate     DateTime
  address       String
  phone         String?
  password      String
  studentNumber String   @unique
  grades        Grade[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Grade {
  id           Int      @id @default(autoincrement())
  student      Student  @relation(fields: [studentId], references: [id])
  studentId    Int
  studentNumber String
  surName      String
  firstName    String
  middleInit   String
  subjectCode  String
  units        Float
  courseTitle  String
  grade        Float
  reExam       Float?
  remarks      String?
  faculty      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}





